@{
    ViewData["Title"] = "Cart";
}

@section link
{
    <partial name="HeadLinks"/>
   <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
   <style>
   .head
   {
      color: red;
   }
   .title,.content,.mount,.prdct-detil,.link-container{
      display: flex;
      flex-direction: row;
      align-items:center;
      justify-content: space-evenly;
   }
   .sub-title{
      display: flex;
      flex-direction: column;
   }
   .chckout{
      border: red 3px inset;
      display: flex;
      flex-direction: column;
      max-width:30%;
      margin:auto;
      align-items:center;
   }
   .crtt{
       padding-top:5%;
   }
   .amount-btn{
       background-color:white;
       border:none
   }
   .remove-btn{
       color:red;
       border:none;
       background-color:white;
   }
   .link-btn,.clear-btn{
       color:white;
       background-color:red;
       border:none;
       border-radius:10px;
       padding:10px;
       margin-block:5px;
   }
   .crt-img{
       width:100px;
       height:100px;
       border-radius:10px;
       padding-right:5px;
   }
</style>
}
<body>
      <nav class="navbar navbar-expand-lg navbar-light">
            <img class="nav-bar-logo" src="~/css/images/logo.jpg" alt="">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse nav-layout" id="navbarNavAltMarkup">
        <div class="navbar-nav contact-flex ">
            <div class="connect-icons">
                <a class="nav-item nav-link" href="@Url.Action("Index","Cart")">CART <i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                <a class="nav-item nav-link" href="@Url.Action("SignUp", "SignUp")">LOGIN <i class="fa fa-user-plus" aria-hidden="true"></i></a>
            </div>
        </div>
        <div class="navbar-nav navbar-menu">
        <a class="nav-item nav-link active" href="#" id="nav-active-tab">HOME<span class="sr-only">(current)</span></a>
        <a class="nav-item nav-link " href="#products">OUR PRODUCTS</a>
        <a class="nav-item nav-link" href="#">SALE</a>
        <a class="nav-item nav-link" href="#testimonials">TESTIMONIALS</a>
        <a class="nav-item nav-link" href="#newsLetter">NEWSLETTER</a>
        <a class="nav-item nav-link" href="#footer">ABOUT</a>
    </div>
    </div>
</nav>

      <div class="crtt">
          <div class="head">
         <div class="content">
            <h5>item</h5>
            <h5>price</h5>
            <h5>quantity</h5>
            <h5>subtotal</h5>
         </div>
      <hr>
      </div>
      <div class="prdct-detil">
         <div class="title">
            <img src="~/css/images/bouqet0.jpg" alt="" class="crt-img">
            <div class="sub-title">
               <h5 class="name">Rose Bouqet</h5>
               <p class="color">color :<span class="prd-clr">Red</span></p>
               <h5 class="price-small">$125.99</h5>
            </div>
         </div>

         <h5 class="price">$125.99</h5>

         <div class="mount">
            <button type="button" class="amount-btn">
               <i class="fa fa-plus" aria-hidden="true"></i>
            </button>
            <h2 class="amount">3</h2>
            <button type="button" class="amount-btn">
               <i class="fa fa-minus" aria-hidden="true"></i>
            </button>
         </div>
         <div class="mount">
            <h5 class="subtotal">$377.97</h5>
            <button class="remove-btn">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
         </div>
      </div>
          <hr>
          <div class="link-container">
             <a class="link-btn" href="/products">continue shopping</a>
             <button type="button" class="link-btn clear-btn">clear shopping cart</button>
         </div>
          <div>
              <div class="chckout">
             <h5>subtotal :<span>$377.97</span></h5>
             <p>shipping fee :<span>$5.34</span></p>
             <h4>order total :<span>$383.31</span></h4>
             <button class="btn clear-btn">Check Out</button>
             </div>
             
          </div>
      </div>

     <div id="footer">
       <partial name ="Footer"  />
       @section cc{
               <p class="cc">Florist Studio - Cart Page<br />© 2022 Iqra sarwar All rights reserved</p>
       }
   </div>
</body>